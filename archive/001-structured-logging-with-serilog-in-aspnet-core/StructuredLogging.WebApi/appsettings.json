{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore.Hosting.Diagnostics": "Error",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "C:\\Workspace\\dotnet-webapi-zero-to-hero-course\\archive\\001-structured-logging-with-serilog-in-aspnet-core\\Logs\\log.clef",
          "rollingInterval": "Day",
          "fileSizeLimitBytes": 10485760, // = 10 MB (10 × 1024 × 1024 = 10485760)
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 100, // ~1 GB total cap
          //"outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}",
          //"formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": [
      "WithMachineName",
      "WithProcessId",
      "WithThreadId"
    ]
  },
  "AllowedHosts": "*"
}